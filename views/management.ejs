<body style="background-color: #FF2222; border-color: #CC1111">
   <% if (message && message != "") { %>
     <% include ./partials/messageDisplay %>
	<% } %>
  <div>
  <div>
  <nav class="navbar navbar-inverse" role="navigation" style="padding-left:130px;">
       <% include ./partials/navigationBar %>
</nav>
</div>
<div>
 <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <div class="navbar-brand">Team Management</div>
    </div>
    <ul class="nav navbar-nav">	
      <% if (current=="/management/addevent" || current=="/management/updateteamschedule") { %>
			<li class="dropdown active">
		<% } else { %>
		    <li class="dropdown">
		<% } %>	
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Schedule
