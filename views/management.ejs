		<% } else { %>
		    <li class="dropdown">
		<% } %>	
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Accounts
        <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="/management/createaccount">Create Account</a></li>
          <li><a href="/management/viewaccounts">View Accounts</a></li>
		  <li role="separator" class="divider"></li>
		  <li><a href="/management/viewaccountsrestore">Restore Deleted Account</a></li>
        </ul>
      </li>
    </ul>
  </div>
</nav> 
</div>
  <br/>
  </div>
  <div class="jumbotron">
  <% if (current=="/management/createaccount") { %>
     <%  include ./partials/createAccountForm %>
	<% } else if (current=="/management/viewaccounts") { %>
     <%  include ./partials/viewEditAccounts %>
	<% } else if (current=="/management/editaccount") { %>
     <%  include ./partials/editAccount %>
	<% } else if (current=="/management/createplayer") { %>
     <%  include ./partials/createPlayerForm %>
	 <% } else if (current=="/management/viewplayers") { %>
     <%  include ./partials/viewEditPlayers %>
	 <% } else if (current=="/management/editplayer") { %>
     <%  include ./partials/editPlayer %>
	 <% } else if (current=="/management/viewaccountsrestore") { %>
     <%  include ./partials/viewAccountsRestore %>
	 <% } else if (current=="/management/viewplayerrestore") { %>
     <%  include ./partials/viewPlayerRestore %>
	 <% } else if (current=="/management/addevent") { %>
     <%  include ./partials/addEvent %>
	 <% } else if (current=="/management/updateteamschedule") { %>
     <%  include ./partials/viewEditCalendar %>
	 <% } else if (current=="/management/editevent") { %>
     <%  include ./partials/editEvent %>
	 <% } else if (current=="/management/addeventlocation") { %>
     <%  include ./partials/addEventLocation %>
	 <% } else if (current=="/management/editeventlocations") { %>
     <%  include ./partials/viewEditLocations %>
	 <% } else if (current=="/management/editlocation") { %>
     <%  include ./partials/editLocation %>
	<% } %>
