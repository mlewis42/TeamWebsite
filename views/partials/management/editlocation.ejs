<link rel="stylesheet" type="text/css" href="/styles/editform.css" />
<div>
<form class="editForm" action="/management/editlocation" method="post">
	<input type="hidden" name="id" value="<%= results.id %>">
  
  <div class="form-group row">
    <label for="inputName" class="col-2 col-form-label">Location Name</label>
	<div class="col-10 editInput">
		<input type="text" class="form-control" id="inputName" name="locationname" placeholder="Location Name" value="<%= results.name %>">
	</div>
  </div>
  
   <div class="form-group row">
	  <label for="address">Address</label>
	  <textarea class="form-control" rows="5" id="address" name="locationaddress"><%= results.address %></textarea>
	</div> 
	
   <button type="submit" class="btn btn-primary">Save</button>
</form>
<div class="deleteContainer">
<form class="deleteButton" action="/management/deletelocation" method="post">
	<input type="hidden" name="id" value="<%= results.id %>">
	<button type="submit" class="btn btn-primary">Delete</button>
</form>
</div>
</div>