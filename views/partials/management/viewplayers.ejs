<div>
<script type="text/javascript" src="/scripts/TableWizard.js"></script>
<div style="padding-left: 30px; padding-bottom: 10px;">
<% if(!filler.showinactive) { %>
<a class="btn btn-primary" role="button" href=<%= typeof filler.sortBy!='undefined' ? '/management/viewplayers?showinactive=true?' + filler.sortBy : '/management/viewplayers?showinactive=true' %> >Show Inactive Players</a>
<% } else { %>
<a class="btn btn-primary" role="button" href="/management/viewplayers">Hide Inactive Players</a>
<% } %>
</div>
<table class="table table-striped" id="sortableTable">
  <thead>
    <tr>
		<th scope="col"></th>
	  <th scope="col" style="cursor: pointer;" onclick="sortTableNumeric(1)">Number</th>
      <th scope="col" style="cursor: pointer;" onclick="sortTableAlpha(2)">First</th>
      <th scope="col" style="cursor: pointer;" onclick="sortTableAlpha(3)">Last</th>
      <th scope="col" style="cursor: pointer;" onclick="sortTablePosition(4)">Position</th>
	  <th scope="col" style="cursor: pointer;" onclick="sortTableAlpha(5)">Active</th>
    </tr>
  </thead>
  <tbody>
<% if(results){ %>
	<% for(var i=0; i<results.length; i++) { %>
		 <tr>
			<td scope="row"><a href="/management/editPlayer?id=<%= results[i].id %>">EDIT</a></td>
			<td><%= results[i].number %></td>
			<td><%= results[i].firstname %></td>
			<td><%= results[i].lastname %></td>
			<td><%= results[i].position %></td>
			<td><%= results[i].active %></td>		
		 </tr>
	<% } %>
<% } %>
	</tbody>
</table>

</div>