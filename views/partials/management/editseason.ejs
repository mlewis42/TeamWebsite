<link rel="stylesheet" type="text/css" href="/styles/editform.css" />
<div>
<div class="editFormContainer">
<form class="editForm" action="/management/editseason" method="post">
  <div class="form-group row">
	<input  type="hidden" name="id" value="<%= results.id %>">
  </div>
  <div class="form-group row">
    <label for="seasonname" class="col-2 col-form-label">Name / Year</label>
	<div class="col-10 editInput">
		<input type="text" class="form-control" id="seasonname"  name="name" placeholder="Season Name" value="<%= results.name %>">
	</div>
  </div>
  <div class="form-group row">
    <label for="standing" class="col-2 col-form-label">Standing</label>
	<div class="col-10 editInput">
		<input type="text" class="form-control" id="standing"  name="standing" placeholder="Standing" value="<%= results.standing %>">
	</div>
  </div>
  
  <div class="form-group row">
	  <label for="wins" class="col-2 col-form-label">Wins</label>
	  <div class="col-10">
		<input class="form-control" type="number" value="<%= results.record.wins %>" name="wins"  id="wins" style="width: 70px;">
	  </div>
  </div>
  
  <div class="form-group row">
	  <label for="losses" class="col-2 col-form-label">Losses</label>
	  <div class="col-10">
		<input class="form-control" type="losses" value="<%= results.record.losses %>" name="losses"  id="losses" style="width: 70px;">
	  </div>
  </div>
	
   <button type="submit" class="btn btn-primary">Save</button>
</form>
</div>
<div class="deleteContainer">
<form class="deleteButton" action="/management/deleteseason" method="post">
	<input type="hidden" name="id" value="<%= results.id %>">
	<button type="submit" class="btn btn-primary">Delete</button>
</form>
</div>
</div>