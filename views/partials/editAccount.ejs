<div>
<form style="padding-left: 40px; width: 300px;" action="/management/edituser" method="post">
  <div class="form-group row">
    <label class="col-2 col-form-label" style="font-size: 25px;"><%= results.email %></label>
	<input  type="hidden" name="email" value="<%= results.email %>">
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-2 col-form-label">Password (leave blank if not changing)</label>
	<div class="col-10">
		<input type="password" class="form-control" id="inputPassword" name="password" placeholder="Password">
	  </div>
	</div>
  <div class="form-group row">
    <label for="inputPasswordCheck" class="col-2 col-form-label">Password</label>
	<div class="col-10">
		<input type="password" class="form-control" id="inputPasswordConfirmation" placeholder="Password Confirmation" oninput="check(this)">
		<script language='javascript' type='text/javascript'>
			function check(input) {
				if (input.value != document.getElementById('inputPassword').value) {
					input.setCustomValidity('Password Must be Matching.');
				} else {
					// input is valid -- reset the error message
					input.setCustomValidity('');
				}
			}
		</script>
	</div>
  </div>
  <div class="form-group row">
    <label for="inputFirstName" class="col-2 col-form-label">First Name</label>
	<div class="col-10">
		<input type="text" class="form-control" id="inputFirstName"  name="firstname" placeholder="First Name" value="<%= results.firstname %>">
	</div>
  </div>
  <div class="form-group row">
    <label for="inputLastName" class="col-2 col-form-label">Last Name</label>
	<div class="col-10">
		<input type="text" class="form-control" id="inputLastName"  name="lastname" placeholder="Last Name" value="<%= results.lastname %>">
	</div>
  </div>
  <div class="form-group row">
	  <label for="playerLink">Player Link:</label>
	  <select class="form-control" id="playerLink" name="playerlink" style="width: 200px;">
		<option name=""; <%if (results.playerid==null || results.playerid==''){ %> selected <% } %>>None</option>
		<% for(var i=0; i<filler.playerChoices.length; i++) { %>
			<option value="<%= filler.playerChoices[i].id%>" <%if (results.playerid != null && filler.playerChoices[i].id==results.playerid){ %> selected <% } %>><%= filler.playerChoices[i].lastname + ", " + filler.playerChoices[i].firstname + " " + filler.playerChoices[i].number %></option>
		<% } %>
	  </select>
  </div> 
  
  <fieldset class="form-group row">
    <legend>Admin</legend>
    <div class="form-check">
      <label class="form-check-label">
        <input type="radio" class="form-check-input" name="admin" id="adminNo" value="false" <% if (!results.admin) { %>checked <% } %>>
        No
      </label>
    </div>
    <div class="form-check">
    <label class="form-check-label">
        <input type="radio" class="form-check-input" name="admin" id="adminYes" value="true" <% if (results.admin) { %>checked<% } %>>
        Yes
      </label>
    </div>
  </fieldset>
	
   <button type="submit" class="btn btn-primary">Save</button>
</form>
<form style="float: right; position: relative; padding-right: 30px;" action="/management/deleteaccount" method="post">
	<input type="hidden" name="id" value="<%= results.id %>">
	<button type="submit" class="btn btn-primary">Delete</button>
</form>
</div>